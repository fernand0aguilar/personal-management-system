<table id="MyContactType" class="table table-striped table-bordered" cellspacing="0" data-table="true" width="100%">
    <thead>
    <tr>
        <td class="d-none">{{ 'datatables.table.Id' | trans }}</td>
        <td>{{ 'contact.settings.table.name' | trans }}</td>
        <td>{{ 'contact.settings.table.preview' | trans }}</td>
        <td>{{ 'contact.settings.table.imagePath' | trans }}</td>
        <td>{{ 'datatables.table.actions' | trans }}</td>
    </tr>
    </thead>
    <tbody>

    {% for type in types %}
        <tr class="trash-parent editable-parent save-parent" data-type="MyContactType">
            <td class="d-none id">      {{ type.id }}                           </td>
            <td class="name">           {{ type.name | capitalize}}             </td>
            <td class="data-preview d-flex justify-content-center"> <img src="{{ type.getImagePath() }}" style="width:40px; height:40px;"/>  </td>
            <td class="image_path">     {{ type.getImagePath() }}               </td>

            {% include 'modules/common/components/table-cells/actions.html.twig' with {
                "trash": true,
                "edit": true,
                "save": true
            } %}

        </tr>
    {% endfor %}

    </tbody>
</table>
