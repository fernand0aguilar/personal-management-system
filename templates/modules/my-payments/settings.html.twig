{% if ajax_render == false %}
    {% set template= "base.html.twig" %}
{% else %}
    {% set template= "blank.html.twig" %}
{% endif %}

    {% extends template %}

{% block body %}
    <!-- ### $App Screen Content ### -->
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            <div class="container-fluid">
                {# Forms #}
                <div class="row">
                    <div class="col-md-12">

                        <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column">
                            <h4 class="c-grey-900 mB-20 align-self-center">{{ 'payments.settings.headers.changeAddSetting' | trans }}</h4>
                            <h5 class="c-grey-900 mB-20 align-self-center">{{ 'payments.settings.headers.currencyMultiplier' | trans }}</h5>
                            <div class="col-md-6 align-self-center add-record-form">
                                {{ form_start(currency_multiplier_form, {'attr':{'data-entity':"MyPaymentsSettings"}}) }}
                                {{ form_end(currency_multiplier_form) }}
                            </div>
                        </div>

                        <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column">

                            <h5 class="c-grey-900 mB-20 align-self-center">{{ 'payments.settings.headers.paymentsTypes' | trans }}</h5>

                            {% include('modules/my-payments/components/types-settings.table.html.twig') %}

                            <div class="col-md-6 align-self-center add-record-form">
                                {{ form_start(payments_types_form,{'attr':{'data-entity':"MyPaymentsSettings"}}) }}
                                {{ form_end(payments_types_form) }}
                            </div>
                        </div>

                        {{ recurring_payments_template_view | raw}}

                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}
