{% if ajax_render == false %}
    {% set template= "base.html.twig" %}
{% else %}
    {% set template= "blank.html.twig" %}
{% endif %}

    {% extends template %}

    {% block body %}
        <!-- ### $App Screen Content ### -->
        <main class='main-content bgc-grey-100'>
            <div id='mainContent'>
                <div class="container-fluid">

                    {# Holidays summary #}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                                <h4 class="c-grey-900 mB-20 text-center">{{ 'job.holidays.headers.summary' | trans }}</h4>
                                {% include 'modules/my-job/components/holidays.summary.table.html.twig' %}
                            </div>
                        </div>
                    </div>

                    {# DataTable Holidays generally #}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                                <h4 class="c-grey-900 mB-20 text-center">{{ 'job.holidays.headers.spent' | trans }}</h4>
                                {% include 'modules/my-job/components/holidays.table.html.twig' %}
                            </div>
                        </div>
                    </div>

                    {# Form #}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column">
                                <h4 class="c-grey-900 mB-20 align-self-center">{{ 'job.holidays.headers.spend' | trans }}</h4>
                                <div class="col-md-6 align-self-center add-record-form">
                                    {{ form(job_holidays_form, {'attr':{' data-entity':"MyJobHolidays"}})}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    {% endblock body %}
