<div>

    <table id="MySubgoals" class="table table-hover" cellspacing="0" width="100%" data-table="true">
        <thead>
        <tr>
            <td class="id d-none">{{ 'datatables.table.idHash' | trans }}</td>
            <td class="name">{{ 'goals.settings.subGoalsSection.table.name' | trans }}</td>
            <td class="description">{{ 'goals.settings.subGoalsSection.table.goal' | trans }}</td>
            <td>{{ 'datatables.table.actions' | trans }}</td>
        </tr>
        </thead>
        <tbody>

        {% for subgoal in all_subgoals %}

            <tr class="trash-parent monthly-single-data editable-parent save-parent" data-type="MySubgoals">

                <td class="id d-none">
                    {{ subgoal.id }}
                </td>

                <td class="name">
                    {{ subgoal.name }}
                </td>

                <td class="parent-td">
                    <select class="form-control disabled goal option-picker">
                        <option value=""></option>
                        {% for goal in all_goals %}
                                <option value="{{ goal.id }}"
                                        {% if goal.id  == subgoal.myGoal.id %}selected{% endif %}>
                                    {{ goal.name | capitalize }}
                                </option>
                        {% endfor %}

                    </select>
                </td>

                {% include 'modules/common/components/table-cells/actions.html.twig' with {
                    "trash": true,
                    "edit": true,
                    "save": true
                } %}

            </tr>

        {% endfor %}

        </tbody>
    </table>


</div>